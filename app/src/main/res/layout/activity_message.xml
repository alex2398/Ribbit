<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                style="@style/AuthBackground"
                tools:context="com.avalladares.ribbit.ui.MessageActivity"
                android:padding="20dp"
                android:paddingTop="0dp">

    <LinearLayout
        android:id="@+id/editTextLayout"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/login_horizontal_padding"
        android:paddingRight="@dimen/login_horizontal_padding"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/messageEditText"
            android:hint="Escribe tu mensaje"
            style="@style/AuthEditText"
            android:maxLines="4"
            android:maxLength="200"
            android:minLines="4"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/buttonDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLayout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/button_divider"
        android:contentDescription="@string/buttonDivider_label"/>

    <Button
        android:text="Enviar"
        android:id="@+id/sendTextButton"
        android:layout_marginRight="0dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextLayout"
        android:layout_toLeftOf="@id/buttonDivider"
        style="@style/AuthButton"/>

    <Button
        android:text="Cancelar"
        android:id="@+id/cancelMessageButton"
        android:layout_marginLeft="0dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextLayout"
        android:layout_toRightOf="@id/buttonDivider"
        style="@style/AuthButton"/>

</RelativeLayout>
